<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Bowling Alley</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="~/">Bowling Alley</a>
            <ul class="nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("GetFreeSlots", "Member")">Free Slots</a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("RejectedSlots", "Member", new { date = DateTime.Today, slotId = 1 })" class="nav-link text-white">Rejected Slots</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("AddSlot", "Member")">Add Slot</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="@Url.Action("ManageSlots", "Member")">Manage Slot</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
