

<h2>Reservation Details</h2>
<table class="table">
    <thead>
        <tr>
            <th>ReservationId</th>
            <th>ReservedBy</th>
            <th>ReservedOn</th>
            <th>SlotId</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.ReservationId</td>
                <td>@reservation.ReservedBy</td>
                <td>@reservation.ReservedOn</td>
                <td>@reservation.SlotId</td>
                <td>
                    <a href="@Url.Action("Approve", "Admin", new { reservationId = reservation.ReservationId })">Approve</a> |
                    <a href="@Url.Action("Reject", "Admin", new { reservationId = reservation.ReservationId })">Reject</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
