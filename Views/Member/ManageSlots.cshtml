@model List<BowlingAlley.Models.BookingSlots>

<h2>Manage Slots</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Slot ID</th>
            <th>Slot Start Time</th>
            <th>Slot End Time</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var slot in Model)
        {
            <tr>
                <td>@slot.SlotId</td>
                <td>@slot.SlotStartTime</td>
                <td>@slot.SlotEndTime</td>
                <td>
                    <form asp-action="DeleteSlot" method="post" style="display:inline;">
                        <input type="hidden" name="SlotId" value="@slot.SlotId" />
                        <button type="submit" class="btn btn-danger">Delete Slot</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="AddSlot" class="btn btn-success">Add Slot</a>
</div>
